{
  "manifest_version": 2,
  "version": "0.1.0",
  "name": "extension name",
  "description": "extension description",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.amazon.com/",
    "activeTab"
  ],
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png",
    "256": "data/icons/256.png"
  },

  "homepage_url": "http://add0n.com/index.html",

  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "data/panel/index.html"
  },
  "content_scripts": [{
    "matches": ["*://*.amazon.com/*"],
    "js": ["data/inject.js"],
    "all_frames": true,
    "match_about_blank": true
  }]
}
